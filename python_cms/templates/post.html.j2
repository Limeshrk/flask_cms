{% extends 'base.html.j2' %}
{% block title %} {{ post.title }} {% endblock %}

{% block content %}
  {% if post.id is not defined %}
    <h1>Post not found</h1>
  {% else %}
  <div class="post-header">
    <h1>{{ post.title }}</h1>

    {% if current_user.id == post.author.id %}
    <div class="btn-container">
      <button onclick="location.href='{{ url_for('pages.edit_post', post_id=post.id) }}'" class= "btn btn-edit tooltip tooltip-bottom" data-tooltip="edit this post">
              Edit
      </button>
      <button onclick="location.href='{{ url_for('pages.delete_post', post_id=post.id) }}'" class= "btn btn-delete tooltip tooltip-bottom" data-tooltip="permanently delete this post">
              Delete
      </button>
    </div>
    {% endif %}
  </div>

  {% if post.teaser_image == '' %}
    <img src="{{ url_for('static', filename='default.jpg') }}" class="img-responsive article-image-inner" alt="">
  {% else %}
    <img src="/files/{{ post.teaser_image }}" class="img-responsive article-image-inner" alt="">
  {% endif %}

    {{ post.body|safe }}
  {% endif %}
{% endblock %}
